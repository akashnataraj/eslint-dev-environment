{
    "env": {
        "browser": true
    },
    "extends": ["eslint:recommended","prettier","plugin:node/recommended"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier":"error",
        "no-unused-vars":"warn",
        "no-console":"off",
        "func-names":"off",
        "no-process-exit":"off",
        "object-shorthand":"off",
        "class-methods-use-this":"off",
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4]
    }
}